pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker build . -t redlock-web-2.0/php'
                sh 'if lsof -Pi :7077 -sTCP:LISTEN -t >/dev/null ; then docker stop redlock-web ; docker rm redlock-web ; fi'
                sh 'docker run -d --name redlock-web -p 7077:80 --network redlock-net redlock-web-2.0/php'
            }
        }
    }
}
