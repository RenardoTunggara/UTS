pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker build . -t redlock-web-2.0/php'
                powershell 'if (Test-NetConnection -ComputerName localhost -Port 7077 -InformationLevel Quiet) { docker stop redlock-web ; docker rm redlock-web }'
                sh 'docker run -d --name redlock-web -p 7077:80 --network redlock-net redlock-web-2.0/php'
            }
        }
    }
}
